package metodo5;
import java.util.*;
public class Calculadora {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner in = new Scanner (System.in);
		Operaçoes calcular = new Operaçoes();
		
		System.out.println("Digite o primeiro numero");
		calcular.numero1 = in.nextDouble();
		System.out.println("Digite o segundo numero");
		calcular.numero2 = in.nextDouble();
		
		System.out.println("A soma é: "+ calcular.somar());
		System.out.println("A subtração é: "+ calcular.subtrair());
		System.out.println("A multiplicação é: "+ calcular.multiplicar());
		System.out.println("A divisão é: "+ calcular.dividir() );
	}
}
